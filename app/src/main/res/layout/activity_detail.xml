<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/loginBg"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.detail.DetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="@dimen/login_logo_width"
            android:layout_height="@dimen/login_logo_height"
            app:srcCompat="@drawable/bluelogo" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/tenDp"
        android:background="@color/white"
        android:orientation="vertical">


        <TextView
            android:id="@+id/txt_detayKategori"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/tenDp"
            android:text="TextView"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_detayResim"
            android:layout_width="@dimen/image3"
            android:layout_height="@dimen/image3"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/tenDp"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/txt_detayUrunAdi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/tenDp"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="@color/cimriBlue"
            android:textSize="@dimen/text_size2"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/tenDp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="@dimen/detay_width"
                android:layout_height="wrap_content"
                android:text="@string/marka"
                android:textAlignment="viewEnd"
                android:textSize="@dimen/text_size2"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_detayMarka"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/fiveDp"
                android:text="TextView"
                android:textSize="@dimen/text_size2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/tenDp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="@dimen/detay_width"
                android:layout_height="wrap_content"
                android:text="@string/renk"
                android:textAlignment="textEnd"
                android:textSize="@dimen/text_size2"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_detayRenk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/fiveDp"
                android:text="TextView"
                android:textSize="@dimen/text_size2" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_detayFiyat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/twentyDp"
            android:text="TextView"
            android:textAlignment="center"
            android:textSize="@dimen/text_size" />

    </LinearLayout>

</LinearLayout>